import("//build_overrides/nrf5_sdk.gni")
import("//build_overrides/mbedtls.gni")

import("${nrf5_sdk_build_root}/nrf5_sdk.gni")
import("${mbedtls_root}/mbedtls.gni")

declare_args() {
  # Build target to use for nRF5 SDK. Use this to set global SDK defines.
  nrf5_sdk_target = ""
}

assert(nrf5_sdk_target != "", "nrf5_sdk_target must be specified")

group("nrf5_sdk") {
  public_deps = [ nrf5_sdk_target ]
}

config("mbedtls_nrf5_config") {
  defines = [
    "MBEDTLS_CONFIG_FILE=<third_party/openthread/repo/third_party/mbedtls/mbedtls-config.h>",
    "MBEDTLS_USER_CONFIG_FILE=<third_party/openthread/ot-nrf528xx/third_party/NordicSemiconductor/libraries/nrf_security/config/nrf-config.h>",

    # These options should really be in the config.h...
    "MBEDTLS_X509_CSR_WRITE_C",
    "MBEDTLS_X509_CREATE_C",
    "MBEDTLS_PEM_WRITE_C",
    "MBEDTLS_HKDF_C",
    "MBEDTLS_ERROR_C",
    "MBEDTLS_PKCS5_C",
  ]

#  if (chip_mdns == "none") {
    defines += [
      "MBEDTLS_PK_WRITE_C",
      "MBEDTLS_OID_C",
      "MBEDTLS_BASE64_C",
    ]
#  }

  include_dirs = [ chip_root ]
}

mbedtls_target("mbedtls") {
  sources = [
  ]

  public_configs = [ ":mbedtls_nrf5_config" ]

  public_deps = [
    ":nrf5_sdk",
    "${chip_root}/third_party/openthread/platforms/nrf528xx:openthread_mbedtls_config_nrf5",
  ]
}
